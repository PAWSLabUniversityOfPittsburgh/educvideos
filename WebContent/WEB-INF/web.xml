  <servlet>
		<servlet-name>content_brokering</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
  		<init-param>
        	<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>edu.pitt.sis.exp.educvideos.contentbrokering.rest</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>content_brokering</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
  
  <servlet>
    <servlet-name>ua</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>edu.pitt.sis.exp.educvideos.videotracking.rest</param-value>
    </init-param>
